<mvc:View
        controllerName="com.groggystuff.sap.ui.restApp.controller.Home"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc">
    <Page title="{i18n>homePageTitle}" class="sapUiResponsiveContentPadding">
        <headerContent>
            <Button icon="sap-icon://log" press="onLogout"/>
        </headerContent>
        <FlexBox
                height="100px"
                alignItems="Start"
                justifyContent="Center">
            <items>
                <Button width="200px" icon="sap-icon://task" id="taskListBtn" text="{i18n>showTaskList}" press="onNavToTasks"
                        class="sapUiTinyMarginEnd"/>
            </items>
        </FlexBox>
    </Page>
</mvc:View>